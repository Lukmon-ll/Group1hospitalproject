@model Group1hospitalproject.Models.DepartmentDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>DeleteConfirm</h2>


<h2>Are you sure you want to delete this Department?</h2>
<a href="/Department/List">Cancel</a>
<div>
    <h2>@Model.DepartmentName</h2>
    <div>Department Description: @Model.DepartmentDescription</div>
    <div>Department News: @Model.DepartmentNews</div>
    <form action="/Department/Delete/@Model.DepartmentID" method="POST">
        <input type="submit" value="Confirm Delete" class="btn" />
    </form>
</div>