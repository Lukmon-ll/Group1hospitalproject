@model Group1hospitalproject.Models.DoctorDto
@{
    ViewBag.Title = "DeleteConfirm";
}

<h2>DeleteConfirm</h2>

<h2>Are you sure you want to delete this Doctor?</h2>
<a href="/Doctor/List" class="btn">Cancel</a>
<div class="delete">
    <h2>@Model.DoctorName</h2>
    <div>Doctor description: @Model.DoctorDescription</div>
    <div>Doctor email: @Model.DoctorEmail</div>
    <form action="/Doctor/Delete/@Model.DoctorID" method="POST">
        <input type="submit" value="Confirm Delete" class="btn" />
    </form>
</div>