@model IEnumerable<Group1hospitalproject.Models.DepartmentDto>

@{
    ViewBag.Title = "Create";
}

<h2>Create Job</h2>
<form action="/Job/Create" method="POST">

    <div>
        <label>Name:</label><input type="text" name="JobTitle" />
    </div>

    <div>
        <label>Description:</label>
    </div>
    <textarea name="Descriptions" rows="4" cols="50"></textarea>

    <div>
        <label>Jobtype:</label><input type="text" name="Jobtype" />
    </div>
    <div>
        <label>Department:</label>
        <select name="DepartmentID">
            @foreach (var departments in Model)
            {
                <option value="@departments.DepartmentID">@departments.DepartmentName</option>
            }
        </select>
    </div>
    <div>
        <input type="submit" value="Add Job" />
    </div>
</form>
