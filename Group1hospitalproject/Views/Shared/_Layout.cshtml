<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title The Hospital Project</title>
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse" title="more options">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("The Hospital Project", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>
                        <a href="/ParkingSchedule/List">Parking</a>
                        <ul>
                            <li><a href="/ParkingSchedule/List">Parking Booking</a></li>
                            <li><a href="/ParkingCar/List">Cars</a></li>
                            <li><a href="/ParkingSpot/List">Parking Spots</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="/doctor/List">Department/Doctor</a>
                        <ul>
                            <li><a href="/doctor/List">Doctors</a></li>
                            <li><a href="/department/List">Departments</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="/job/List">Jobs</a>
                        <ul>
                            <li><a href="/job/List">Jobs</a></li>
                            <li><a href="/application/List">Applications</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="/appointment/List">Appointments</a>
                        <ul>
                            <li><a href="/appointment/List">Appointments</a></li>
                            <li><a href="/patient/List">Patients</a></li>
                        </ul>
                    </li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year The Hospital Project</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
